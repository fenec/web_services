<div class="page-header">
  <h1>Referral codes</h1>
</div>

<%= search_form_for @q, :url => profile_referral_codes_path, :html => { :method => :get, :class => "well form-inline" } do |f| %>
  <div class="form-group">
    <%= f.text_field :code_cont, :type => "search", :class => "form-control", :placeholder => "Search by code" %>
  </div>

  <%= f.submit "Search", :class => "btn btn-default" %>
<% end %>


<p><%= link_to("Create a new Referral code", new_profile_referral_code_path) %></p>

<table class="sortable table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "code" %></th>
      <th><%= sortable "expires_at" %></th>
      <th><%= sortable "redeemed_at" %></th>
      <th><%= sortable "account_name" %></th>
      <th><%= sortable "amount" %></th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @referrals.each do |r| %>
      <tr class="referral_code">
        <td><%= link_to(r.id, profile_referral_code_path(r)) %></td>
        <td><%= link_to(r.code, profile_referral_code_path(r)) %></td>
        <td><%= r.expires_at %></td>
        <td><%= r.redeemed_at %></td>
        <td><%= r.account_name %></td>
        <td><%= r.asset_amount %> <%= r.asset.symbol %></td>
        <td><%= link_to('Edit', edit_profile_referral_code_path(r)) %></td>
        <td><%= link_to('Delete', profile_referral_code_path(r), :confirm => "Are you sure?", :method => :delete) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @referrals %>
